<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OverItProject.Views.DetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label
                x:Name="imgTitle"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="CenterAndExpand"
                TextColor="Black" />
            <Image x:Name="img" />
            <Label
                x:Name="lblDescription"
                FontSize="18"
                TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>